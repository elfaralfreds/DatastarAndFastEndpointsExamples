<div
  id="contact-form"
  data-signals="
    {
        firstName: '{{ User.Firstname }}',
        lastName: '{{ User.Lastname }}',
        email: '{{ User.Email }}'
    }
  "
>
  <div class="grid gap-6 mb-6 md:grid-cols-2">
    <div>
      <label
        class="block mb-2 text-sm font-medium text-white-900 underline"
      >
        First name
      </label>
      <input
        type="text"
        class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"
        data-bind="firstName"
      >
    </div>
    <div>
      <label
        class="block mb-2 text-sm font-medium text-white-900 underline"
      >
        Last name
      </label>
      <input
        type="text"
        class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"
        data-bind="lastName"
      >
    </div>
  </div>
  <div class="mb-6">
    <label
      class="block mb-2 text-sm font-medium text-white-900 underline"
    >
      Email address
    </label>
    <input
      type="email"
      class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"
      data-bind="email"
    >
  </div>
  <div class="flex gap-4">
    <button
      class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center"
      data-on-click="@get('/examples/click-to-edit/edit')"
    >
      Save
    </button>
    <button
      class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center"
      data-on-click="@get('/examples/click-to-edit/reset')"
    >
      Cancel
    </button>
  </div>
</div>
